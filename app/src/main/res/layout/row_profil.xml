<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#A4B5BD">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeImageFond"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivProfil"
                    android:layout_width="150dp"
                    android:layout_height="150dp"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    tools:srcCompat="@tools:sample/avatars" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvPrenomNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/orkney"
                android:gravity="center_horizontal"
                android:textColor="#0B0B0B"
                android:textSize="25sp"
                tools:text="Prenom et Nom" />

            <TextView
                android:id="@+id/tvMetier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orkney"
                android:gravity="center_horizontal"
                android:textColor="#4E4A4A"
                android:textStyle="italic"
                tools:text="Ingénieur d'affaires" />

            <LinearLayout
                android:id="@+id/linearInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/rounded_corner"
                android:elevation="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linearBio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rgb"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBioInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/ailerons"
                        android:gravity="center_horizontal"
                        android:text="Biographie"
                        android:textColor="#FFD700"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tvBio"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rgb"
                        android:fontFamily="@font/orkney"
                        android:textAlignment="center"
                        android:textColor="#FFFDFD"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        tools:text="Diplômé de l’école d’ingénieurs INSA Lyon, je souhaite appliquer mes connaissances techniques à Prodways Group. Je peux vous aider à innover et optimiser vos procédés et produits." />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="#FFD700"
                        android:orientation="horizontal"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/pentagone1"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linearCentreInteret"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_hob"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCentre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ailerons"
                        android:gravity="center_horizontal"
                        android:text="Centre d'intérêt"
                        android:textColor="#FFA500"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="7dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvActivite1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="7dp"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="MMMMMMMMM" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="7dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvActivite2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="7dp"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="TextView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="7dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvActivite3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="7dp"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="TextView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="7dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvActivite4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="7dp"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="TextView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvActivite5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="TextView" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/centre_intert" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_perso"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPersonalite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ailerons"
                        android:gravity="center_horizontal"
                        android:text="Personnalité"
                        android:textColor="#CC8910"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="7dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvQualite1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="7dp"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="MMMMMMMMM" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="7dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvQualite2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="7dp"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="TextView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="7dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvQualite3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="7dp"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="TextView" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="7dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvQualite4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="7dp"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="TextView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="7dp"
                            app:srcCompat="@drawable/ic_round_stream_white" />

                        <TextView
                            android:id="@+id/tvQualite5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="7dp"
                            android:fontFamily="@font/orkney"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            tools:text="TextView" />
                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btnTelecharger"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="telecharger CV" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>